<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Allow backup of app data -->
        <include domain="file" path="." />
        <include domain="database" path="." />
        <include domain="sharedpref" path="." />

        <!-- Exclude sensitive or large files -->
        <exclude domain="cache" />
        <exclude domain="external-cache" />
    </cloud-backup>

    <device-transfer>
        <!-- Allow transfer of app data between devices -->
        <include domain="file" path="." />
        <include domain="database" path="." />
        <include domain="sharedpref" path="." />
    </device-transfer>
</data-extraction-rules>

